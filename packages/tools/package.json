{
    "name": "@ying-web/tools",
    "private": true,
    "version": "1.0.0",
    "description": "A pure TypeScript tool collection for @ying-web",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/types/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/cjs/index.js",
            "import": "./dist/esm/index.js",
            "types": "./dist/types/index.d.ts",
            "development": "./src/index.ts",
            "default": "./dist/cjs/index.js"
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "npm run build:clean && npm run build:esm && npm run build:cjs && npm run build:types",
        "build:clean": "rimraf dist",
        "build:esm": "tsc -p tsconfig.esm.json",
        "build:cjs": "tsc -p tsconfig.cjs.json",
        "build:types": "tsc -p tsconfig.types.json",
        "test": "NODE_ENV=testing jest --colors --forceExit",
        "test:coverage": "NODE_ENV=testing jest --coverage",
        "test:clear": "NODE_ENV=testing jest --clearCache",
        "lint": "eslint --fix src",
        "prettier": "prettier src --write",
        "docs": "typedoc --out docs src/index.ts"
    },
    "keywords": [
        "typescript",
        "utilities",
        "tools",
        "@ying-web"
    ],
    "author": "Kris <chenjinwen77@gmail.com> https://www.krissarea.com",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^20.17.6",
        "@typescript-eslint/eslint-plugin": "^7.1.1",
        "@typescript-eslint/parser": "^7.1.1",
        "@typescript-eslint/typescript-estree": "^8.15.0",
        "eslint": "^9.9.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.30.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.2.5",
        "tsconfig-paths-jest": "^0.0.1",
        "typedoc": "^0.25.9",
        "typescript": "^5.5.0"
    }
}
