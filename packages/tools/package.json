{
    "name": "@ying-web/tools",
    "private": true,
    "version": "1.0.0",
    "description": "A pure TypeScript tool collection for @ying-web",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/types/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/cjs/index.js",
            "import": "./dist/esm/index.js",
            "types": "./dist/types/index.d.ts",
            "development": "./src/index.ts",
            "default": "./dist/cjs/index.js"
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "pnpm build:clean && pnpm build:esm && pnpm build:cjs && pnpm build:types",
        "build:clean": "rimraf dist",
        "build:esm": "tsc -p tsconfig.esm.json",
        "build:cjs": "tsc -p tsconfig.cjs.json",
        "build:types": "tsc -p tsconfig.types.json",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint --fix src",
        "docs": "typedoc --out docs src/index.ts"
    },
    "keywords": [
        "typescript",
        "utilities",
        "tools",
        "@ying-web"
    ],
    "author": "Kris <chenjinwen77@gmail.com> https://www.krissarea.com",
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.9.1",
        "@types/node": "^20.17.6",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "@typescript-eslint/typescript-estree": "^8.15.0",
        "@vitest/coverage-v8": "^1.6.0",
        "@ying-web/test-config": "workspace:*",
        "cross-env": "^7.0.3",
        "eslint": "^9.9.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.3",
        "eslint-plugin-import": "^2.30.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "rimraf": "^5.0.5",
        "tslib": "^2.8.1",
        "typedoc": "^0.25.9",
        "typescript": "^5.6.3",
        "vitest": "^1.6.0"
    }
}
