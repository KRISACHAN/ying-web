{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "lib": ["ES2018", "DOM"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["vitest"],
        "typeRoots": ["node_modules/@types", "node_modules/tslib"],
        "baseUrl": "./"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.test.ts",
        "src/**/tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
