{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local",
        "**/.env.*local.example",
        "**/.env.*production",
        "**/.env.*development"
    ],
    "globalEnv": ["NODE_ENV"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "build/**"],
            "cache": true
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        },
        "deploy": {
            "dependsOn": ["build"],
            "cache": false
        }
    }
}
