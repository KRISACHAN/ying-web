{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local",
        "**/.env.*local.example",
        "**/.env.*production",
        "**/.env.*development"
    ],
    "globalEnv": [
        "NODE_ENV"
    ],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".output/**", "dist/**", "dist-app/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
